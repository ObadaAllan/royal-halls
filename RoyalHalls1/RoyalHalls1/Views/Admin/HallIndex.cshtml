
@model IEnumerable<RoyalHalls1.Models.Hall>
@{
    ViewData["Title"] = "HallIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.AP = ViewBag.adminProfile;

}


<div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Manage Halls</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <div class="d-md-flex">
                            <ol class="breadcrumb ms-auto">
                                <li><a href="#" class="fw-normal">Dashboard</a></li>
                            </ol>
                            
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Manage Halls</h3>
                            <p class="text-muted">Halls Info <code></code></p>
                            <div class="table-responsive">  

                            <p>
                                <a class="btn btn-primary" asp-action="HallCreate">Add New Hall</a>
                            </p>

                                <table class="table text-nowrap">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">@Html.DisplayNameFor(model => model.HName)</th>
                                            <th class="border-top-0">@Html.DisplayNameFor(model => model.HDescription)</th>
                                            <th class="border-top-0">@Html.DisplayNameFor(model => model.HAddress)</th>
                                            <th class="border-top-0">@Html.DisplayNameFor(model => model.HPrice)</th>
                                            <th class="border-top-0">@Html.DisplayNameFor(model => model.HPhoto)</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                       {
                                           
                                       
                                        <tr>
                                            <td></td>
                                            <td>@Html.DisplayFor(modelItem => item.HName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HDescription)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HAddress)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HPrice)</td>

                                            <td><img src=@Url.Content("~/Image/" + item.HPhoto) 
                                                asp-append-version ="true" style="border-radius:20%;" width="100" height="100" />
                                            </td>
                                            <td>

                                            <a class="btn btn-primary" asp-action="HallEdit" asp-route-id="@item.HId">Edit</a> |
                                            <a  class="btn btn-info"  asp-action="HallDetails" asp-route-id="@item.HId">Details</a> |
                                            <a  class="btn btn-danger" asp-action="HallDelete" asp-route-id="@item.HId">Delete</a>
                                            </td>
                                        </tr>
                                       } 
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
        </div>
