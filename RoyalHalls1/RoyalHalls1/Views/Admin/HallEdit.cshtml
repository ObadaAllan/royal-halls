@model RoyalHalls1.Models.Hall
@{
    ViewData["Title"] = "HallEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.AP = ViewBag.adminProfile;

}

<div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Manage Halls</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <div class="d-md-flex">
                            <ol class="breadcrumb ms-auto">
                                <li><a href="#" class="fw-normal">Dashboard</a></li>
                            </ol>
                            

                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Manage Halls</h3>
                            <p class="text-muted">Halls Info <code></code></p>
                            <div class="table-responsive">
      
        <h1>Edit</h1>

        <h4>Hall</h4>
            <hr />

            <form asp-action="HallEdit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HId" />
                <div class="form-group">
                <label asp-for="HName" class="control-label"></label>
                <input asp-for="HName" class="form-control" />
                <span asp-validation-for="HName" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="HDescription" class="control-label"></label>
                <input asp-for="HDescription" class="form-control" />
                <span asp-validation-for="HDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HAddress" class="control-label"></label>
                <input asp-for="HAddress" class="form-control" />
                <span asp-validation-for="HAddress" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="HPrice" class="control-label"></label>
                <input asp-for="HPrice" class="form-control" />
                <span asp-validation-for="HPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HImageFile" class="control-label"></label>
                <input asp-for="HImageFile" accept="image/*" class="form-control" />
                <span asp-validation-for="HImageFile" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="update" class="btn btn-primary" />
            </div>
        </form>
       
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
