@model  RoyalHalls1.Models.Reservation; 

@{
    ViewData["Title"] = "UserBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.userId = ViewBag.Uid ;
    ViewBag.home = ViewBag.h;
}


 





<div class="mt-5"></div>

<div class="container" >
            

                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12 col-xlg-12 col-md-12">

  
      <div class="col-md-12 ">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
            
            <div class="room_img">
                <figure><img style="width:80%;height:400px" src=@Url.Content("~/Image/"+ViewBag.hall.HPhoto) alt="#"  /></figure>
            </div>
            
            <div class="bed_room">
                    <h3>@ViewBag.hall.HName</h3>
                    <p>@ViewBag.hall.HDescription </p>
                    <br />
                    <p>Location : @ViewBag.hall.HAddress </p>
                    <br>
                   <h1 class="card-title pricing-card-title">$@ViewBag.hall.HPrice <small class="text-muted">/ Day</small></h1>
                   <br>

            </div>


            <div class="mb-4 pb-2">

            <div class="row">
            <div class="col-8"> 
           <form asp-action="UserBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input type="hidden" name="hallid"  value="@ViewBag.hall.HId" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="start" class="control-label"></label>
                <input type="date" name="start" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="end" class="control-label"></label>
                <input type="date" name="end" class="form-control"  required/>
            </div>

            <div class="form-group">
                <input type="submit" value="book now" class="btn btn-primary" />
            </div>
          </form>
          </div>


          <div class="col-4">

              <h1>not availbe times</h1>
              <table class="table">
                  <tr>
                      <th>start</th>
                      <th>end</th>

                  </tr>
                 
                 @foreach (var item in ViewBag.hallRes)
                 {
                  <tr>

                     

                      <td>@item.Datefrom</td>
                      <td>@item.Dateto</td>

                  </tr>
                                       
                 }


              </table>





          </div>

          </div>
              
            </div>
            
            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <p class="mb-2 h5"></p>
                <p class="text-muted mb-0"></p>
              </div>
              <div class="px-3">
                <p class="mb-2 h5"></p>
                <p class="text-muted mb-0"></p>
              </div>
              <div>
                <p class="mb-2 h5"></p>
                <p class="text-muted mb-0"></p>
              </div>

            </div>
          </div>
        </div>

      </div>

                    </div>

                    
                    <!-- Column -->
                    
                    <!-- Column -->
                </div>
                
            </div>
           

</div>