@model IEnumerable<RoyalHalls1.Models.Reservation>
@{
    ViewData["Title"] = "Serach";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.AP = ViewBag.adminProfile;

}


<div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Reservation</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <div class="d-md-flex">
                            <ol class="breadcrumb ms-auto">
                                <li><a href="#" class="fw-normal">Dashboard</a></li>
                            </ol>
                            
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">reservation</h3>
                            <p class="text-muted">serch reservation <code></code></p>
                            <div class="table-responsive">  
                                
                                
                        <div class="row">

                            <div class="col-6">
                                
                            <form asp-action="Serach" method="post"> 
                                <input type="date" class="form-control" name="startDate" placeholder="start date" />
                                <br />
                                <input type="date" class="form-control" name="endDate" placeholder="End date" />
                                <br />
                                <button type="submit" class="btn btn-dark">search</button>
                            </form>
                            </div>
                            </div>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Halls.HName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Halls.HAddress)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Halls.HPrice)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Datefrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Halls.HName)
            </td>
               
            <td>
                @Html.DisplayFor(modelItem => item.Halls.HAddress)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Halls.HPrice)
            </td>
                        
                                 
            <td>
                @Html.DisplayFor(modelItem => item.Datefrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateto)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
            
            <td>
                @if (item.Status=="pending")
                    {
                        <a class='btn btn-success' asp-action="Approved" asp-route-id="@item.Id">Aprroved</a> ;
                        <a class="btn btn-danger" asp-action="Reject" asp-route-id="@item.Id">Rejected</a> ;

                    }

            </td>
        </tr>
}
    </tbody>
</table>

            
